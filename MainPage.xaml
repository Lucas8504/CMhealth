<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CMhealth.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#181818">

    <VerticalStackLayout VerticalOptions="Center" Spacing="25" Margin="10">

        <Label
            FontAttributes="Bold"
            FontSize="30"
            HorizontalTextAlignment="Center"
            Text="CM Health"
            TextColor="#cccccc" />
        
        <Entry
            BackgroundColor="#2a2a2a"
            Placeholder="Tu peso en Kg.(ej: 75.5)"
            PlaceholderColor="#7d7c7c"
            TextColor="#cccccc" />
        
        <Entry
            BackgroundColor="#2a2a2a"
            Placeholder="Tu altura en Mts.(ej: 1.75)"
            PlaceholderColor="#7d7c7c"
            TextColor="#cccccc" />
        
        <Entry
            BackgroundColor="#2a2a2a"
            Placeholder="Tu masa corporal."
            PlaceholderColor="#7d7c7c"
            TextColor="#cccccc" />
        
        <Button BackgroundColor="#0078d4" Text="Calcular"  TextColor="#cccccc" FontAttributes="Bold" FontSize="22"/>

    </VerticalStackLayout>




</ContentPage>
